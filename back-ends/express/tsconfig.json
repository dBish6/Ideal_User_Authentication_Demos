{
  "compilerOptions": {
    "module": "ESNext",
    "moduleResolution": "Node",
    "target": "ES5",
    "sourceMap": true,
    "outDir": "build",
    "baseUrl": "src",

    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "skipLibCheck": true
  },
  "ts-node": {
    "transpileOnly": true,
    "esm": true
  },
  "include": ["src/**/*"]
}
